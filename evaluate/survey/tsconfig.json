{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        //"noUnusedLocals": true,
        //"noUnusedParameters": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "noImplicitUseStrict": true
    },
    "exclude": [
        "node_modules",
        "build"
    ],
"awesomeTypescriptLoaderOptions": {"transpileOnly": true}
}
